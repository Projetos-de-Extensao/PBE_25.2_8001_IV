# Configurações de Ambiente para Deploy Heroku
# Copie este arquivo para .env e ajuste os valores para desenvolvimento local

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (deixe em branco para usar SQLite localmente)
# Em produção na Heroku, será configurado automaticamente via DATABASE_URL
DATABASE_URL=

# Security Settings (use True em produção)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
